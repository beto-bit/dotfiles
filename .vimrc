" No strange things
set nocompatible
set background=dark

" UTF-8 enconding
set encoding=utf8

" Smort
set autoindent
set smartindent

" Show line numbers
set number

" Mouse
set mouse=a

" ====== Tabs ======
" Tabs are four (just in case)
set tabstop=4

" Spaces is better than tabs
set expandtab

" Tab -> 4 spaces
set shiftwidth=4
" ====== + ======

" Smort search
set incsearch
set ignorecase
set hlsearch
set smartcase

" Autocompletion (holy shit (not so exciting))
set wildmenu
set wildmode=list:longest

" STATUS LINE
" Default status line
" set statusline=%<%f\ %h%m%r%=%-14.(%l,%c%V%)\ %P
